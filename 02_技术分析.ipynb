import sys
from pathlib import Path
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

project_root = Path.cwd().parent
sys.path.append(str(project_root))

# å¯¼å…¥é¡¹ç›®æ¨¡å—
from src.analyzer import StockAnalyzer

# è®¾ç½®æ ·å¼
plt.style.use('seaborn-v0_8-whitegrid')
sns.set_palette("husl")

# %%
# åŠ è½½æ•°æ®æ¼”ç¤º
analyzer = StockAnalyzer()
cleaned_files = list(analyzer.cleaned_dir.glob("*_cleaned.csv"))

print(f"Found {len(cleaned_files)} stock datasets")

# %%
# æŠ€æœ¯æŒ‡æ ‡æ·±åº¦åˆ†æž
if cleaned_files:
    ticker = cleaned_files[0].stem.replace('_cleaned', '')
    df = analyzer.load_cleaned_data(ticker)
    
    # è®¡ç®—æ‰€æœ‰æŠ€æœ¯æŒ‡æ ‡
    df = analyzer.calculate_all_indicators(df)
    
    # åˆ›å»ºæŠ€æœ¯åˆ†æžä»ªè¡¨æ¿
    fig = plt.figure(figsize=(16, 14))
    
    # ä»·æ ¼å’Œç§»åŠ¨å¹³å‡çº¿
    ax1 = plt.subplot(4, 1, 1)
    ax1.plot(df.index, df['close'], label='Close Price', linewidth=2, color='black')
    
    ma_colors = ['blue', 'green', 'orange', 'red']
    ma_columns = [col for col in df.columns if col.startswith('MA')][:4]
    
    for i, ma_col in enumerate(ma_columns):
        ax1.plot(df.index, df[ma_col], label=ma_col, linewidth=1.5, 
                alpha=0.7, color=ma_colors[i])
    
    ax1.set_title(f'{ticker} - Price and Moving Averages', fontsize=14)
    ax1.set_ylabel('Price')
    ax1.legend(loc='upper left', ncol=3)
    ax1.grid(True, alpha=0.3)
    
    # RSIæŒ‡æ ‡
    ax2 = plt.subplot(4, 1, 2)
    if 'RSI_14' in df.columns:
        ax2.plot(df.index, df['RSI_14'], label='RSI(14)', linewidth=2, color='purple')
        ax2.fill_between(df.index, 30, 70, alpha=0.1, color='gray')
        ax2.axhline(y=70, color='red', linestyle='--', alpha=0.7, label='Overbought (70)')
        ax2.axhline(y=30, color='green', linestyle='--', alpha=0.7, label='Oversold (30)')
        ax2.set_title('Relative Strength Index (RSI)', fontsize=14)
        ax2.set_ylabel('RSI')
        ax2.legend(loc='upper left')
        ax2.grid(True, alpha=0.3)
    
    # MACDæŒ‡æ ‡
    ax3 = plt.subplot(4, 1, 3)
    if 'MACD' in df.columns and 'MACD_Signal' in df.columns:
        ax3.plot(df.index, df['MACD'], label='MACD', linewidth=2, color='blue')
        ax3.plot(df.index, df['MACD_Signal'], label='Signal Line', linewidth=1.5, color='red')
        
        # MACDæŸ±çŠ¶å›¾
        colors = ['green' if x >= 0 else 'red' for x in df['MACD_Histogram']]
        ax3.bar(df.index, df['MACD_Histogram'], color=colors, alpha=0.5, label='Histogram')
        
        ax3.axhline(y=0, color='black', linestyle='-', alpha=0.3)
        ax3.set_title('MACD Indicator', fontsize=14)
        ax3.set_ylabel('MACD')
        ax3.legend(loc='upper left')
        ax3.grid(True, alpha=0.3)
    
    # å¸ƒæž—å¸¦
    ax4 = plt.subplot(4, 1, 4)
    if all(col in df.columns for col in ['BB_Upper', 'BB_Middle', 'BB_Lower']):
        ax4.plot(df.index, df['close'], label='Close Price', linewidth=1.5, color='black')
        ax4.plot(df.index, df['BB_Upper'], label='Upper Band', linewidth=1, color='red', alpha=0.7)
        ax4.plot(df.index, df['BB_Middle'], label='Middle Band', linewidth=1, color='blue', alpha=0.7)
        ax4.plot(df.index, df['BB_Lower'], label='Lower Band', linewidth=1, color='green', alpha=0.7)
        ax4.fill_between(df.index, df['BB_Lower'], df['BB_Upper'], alpha=0.1, color='gray')
        ax4.set_title('Bollinger Bands', fontsize=14)
        ax4.set_ylabel('Price')
        ax4.set_xlabel('Date')
        ax4.legend(loc='upper left')
        ax4.grid(True, alpha=0.3)
    
    plt.tight_layout()
    plt.show()
